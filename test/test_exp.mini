__name = test_exp

_grow_rate = 0.2
_initial = 1

[grid]
file = grids/square_triangles.msh
initial_level = 0

[model]
begin_time = 0.
end_time = 10
time_step = 0.1
order = 1

[model.compartments]
domain     = 0

############################ Model for domain ############################
[model.domain.operator]
u = 0

[model.domain.initial]
u = {_initial}

[model.domain.reaction]
u = {_grow_rate}*u

[model.domain.reaction.jacobian]
du_du = {_grow_rate}

[model.domain.diffusion]
u = 0.

[model.domain.writer]
file_name = {__name}

######################### Compare with analytic vtk #########################
[wrapper.vtkcompare]
name = {__name}/{__name}-00101
reference = reference/{__name}-00101
extension = vtu
relative = 2e-2
absolute = 1e-9

############################ Logging settings #################################
# levels = off, critical, error, waring, notice, info, debug, trace, all

[logging]
default.level = trace

[logging.sinks.stdout]
pattern = "[\\{reldays:0>2\\}-\\{reltime:8%T\\}] [\\{backend\\}] \\{msg\\}"

[logging.backend.model]
level = trace
indent = 2

[logging.backend.solver]
level = trace
indent = 4