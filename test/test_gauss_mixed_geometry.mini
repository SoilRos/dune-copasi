__name = test_gauss_mixed_geometry

_diffusion = 0.005
_t0 = 1.
_gauss_eq = exp(-((x-0.5)^2+(y-0.5)^2)/(4*t*{_diffusion})) / (4*pi*t*{_diffusion})

[grid]
dimension = 2
file = grids/square_mixed_geometry.msh
initial_level = 4

[model]
order = 1

[model.time_stepping]
rk_method = alexander_2
begin = {_t0}
end = 2
initial_step = 1e-2
min_step = 1e-3
max_step = 1e-1
decrease_factor = 0.5
increase_factor = 1.5

[model.writer]
file_path = {__name}

[model.compartments]
cubes     = 0
triangles = 1

############################ Model for cubes ############################
[model.cubes.initial]
u = {_gauss_eq}

[model.cubes.reaction]
u = 0

[model.cubes.reaction.jacobian]
du_du = 0

[model.cubes.diffusion]
u = {_diffusion}

#### compare against a known solution
[model.cubes.compare.expression]
u = {_gauss_eq}
[model.cubes.compare.l2_error]
u = 0.155

############################ Model for triangles ############################
[model.triangles.initial]
u = {_gauss_eq}

[model.triangles.reaction]
u = 0

[model.triangles.reaction.jacobian]
du_du = 0

[model.triangles.diffusion]
u = {_diffusion}

#### compare against a known solution
[model.triangles.compare.expression]
u = {_gauss_eq}
[model.triangles.compare.l2_error]
u = 0.095

############################ Logging settings #################################
# levels = off, critical, error, waring, notice, info, detail, debug, trace, all

# Sink setup for console stdcout
[logging.sinks.stdout]
level = info # max level to output on this sink
pattern = "[\\{reldays:0>2\\}-\\{reltime:8%T\\}] [\\{backend\\}] \\{msg\\}"

# Sink setup for logfile output
[logging.sinks.logfile]
level = all # max level to output on this sink
type = rank-0-file
file = {__name}.log
pattern = "[\\{reldays:0>2\\}-\\{reltime:8%T\\}] [\\{backend\\}] \\{msg\\}"

# Logger internal info go into this logger
[logging.internal]
level = off

# General info go into this logger
# Settings on this logger are the default values for other backend loggers
[logging.default]
level = detail
indent = 0
sinks = logfile, stdout

# Logger info go into this logger
[logging.backend.logging]
level = off
indent = 0

# Grid info go into this logger
[logging.backend.grid]
level = detail
indent = 2

# General model info go into this logger
[logging.backend.model]
level = detail
indent = 2

# Time stepping info go into this logger
[logging.backend.stepper]
level = detail
indent = 4

# writer info go into this logger
[logging.backend.writer]
level = trace
indent = 4
